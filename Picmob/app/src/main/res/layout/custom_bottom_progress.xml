<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:layout_gravity="bottom"
    android:layout_marginBottom="-18dp"
    android:background="@color/colorPrimary"
    android:elevation="8dp"
    android:orientation="vertical"
    app:cardCornerRadius="18dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--        <ProgressBar-->
        <!--            android:id="@+id/custom_dialog_progressBar"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_centerHorizontal="true"-->
        <!--            android:layout_marginTop="60dp"-->
        <!--            android:background="@drawable/favorite_item_bg"-->
        <!--            android:indeterminate="true"-->
        <!--            android:indeterminateBehavior="cycle"-->
        <!--            android:indeterminateDrawable="@drawable/ic_loading_eclipse_200px"-->
        <!--            android:padding="5dp"-->
        <!--            android:visibility="visible" />-->

        <ProgressBar
            android:id="@+id/custom_dialog_progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:background="@drawable/progress_bar_bg"
            android:padding="5dp"
            android:progressDrawable="@drawable/ic_loading_eclipse_200px"
            android:visibility="visible" />

        <TextView
            android:id="@+id/custom_dialog_textMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/custom_dialog_progressBar"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="Please wait a moment ..."
            android:textColor="@color/com_facebook_blue"
            android:textSize="15sp"
            android:textStyle="bold" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>