<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/navigation_drawer_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/navigation_user_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="66dp"
                android:layout_marginBottom="38dp"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:paddingStart="@dimen/navigation_drawer_start">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@mipmap/ic_launcher_round" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/btn_round_shape"
                    android:gravity="center"
                    android:paddingStart="26dp"
                    android:paddingEnd="26dp"
                    android:text="LOG IN"
                    android:textColor="@color/navigationDrawerTextColor"
                    android:textSize="@dimen/navigation_drawer_default_text" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/navigationDrawerDividerColor" />

        <LinearLayout
            android:id="@+id/navigation_item_wallpapers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:paddingStart="@dimen/navigation_drawer_start"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            android:paddingBottom="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="@dimen/navigation_drawer_item_layout_padding_top"
                android:paddingBottom="@dimen/navigation_drawer_item_layout_padding_bottom">

                <ImageView
                    android:layout_width="@dimen/navigation_drawer_item_icon_size"
                    android:layout_height="@dimen/navigation_drawer_item_icon_size"
                    app:srcCompat="@drawable/ic_wallpaper_round_24"
                    app:tint="@color/navigationDrawerIconColor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/navigation_drawer_item_text_padding_start"
                    android:text="Wallpapers"
                    android:textAllCaps="false"
                    android:textColor="@color/navigationDrawerTextColor"
                    android:textSize="@dimen/navigation_drawer_default_text" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/navigation_item_video_wallpapers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:paddingStart="@dimen/navigation_drawer_start"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            android:paddingBottom="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="@dimen/navigation_drawer_item_layout_padding_top"
                android:paddingBottom="@dimen/navigation_drawer_item_layout_padding_bottom">

                <ImageView
                    android:layout_width="@dimen/navigation_drawer_item_icon_size"
                    android:layout_height="@dimen/navigation_drawer_item_icon_size"
                    app:srcCompat="@drawable/ic_video_round_24"
                    app:tint="@color/navigationDrawerIconColor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/navigation_drawer_item_text_padding_start"
                    android:text="Video Wallpapers"
                    android:textAllCaps="false"
                    android:textColor="@color/navigationDrawerTextColor"
                    android:textSize="@dimen/navigation_drawer_default_text" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/navigation_item_ringtones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:paddingStart="@dimen/navigation_drawer_start"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            android:paddingBottom="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="@dimen/navigation_drawer_item_layout_padding_top"
                android:paddingBottom="@dimen/navigation_drawer_item_layout_padding_bottom">

                <ImageView
                    android:layout_width="@dimen/navigation_drawer_item_icon_size"
                    android:layout_height="@dimen/navigation_drawer_item_icon_size"
                    app:srcCompat="@drawable/ic_phone_ring_round_24"
                    app:tint="@color/navigationDrawerIconColor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/navigation_drawer_item_text_padding_start"
                    android:text="Ringtones"
                    android:textAllCaps="false"
                    android:textColor="@color/navigationDrawerTextColor"
                    android:textSize="@dimen/navigation_drawer_default_text" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/navigation_item_notification_sound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:paddingStart="@dimen/navigation_drawer_start"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            android:paddingBottom="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="@dimen/navigation_drawer_item_layout_padding_top"
                android:paddingBottom="@dimen/navigation_drawer_item_layout_padding_bottom">

                <ImageView
                    android:layout_width="@dimen/navigation_drawer_item_icon_size"
                    android:layout_height="@dimen/navigation_drawer_item_icon_size"
                    app:srcCompat="@drawable/ic_notifications_round_24"
                    app:tint="@color/navigationDrawerIconColor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/navigation_drawer_item_text_padding_start"
                    android:text="Notification Sounds"
                    android:textAllCaps="false"
                    android:textColor="@color/navigationDrawerTextColor"
                    android:textSize="@dimen/navigation_drawer_default_text" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/navigationDrawerDividerColor" />

        <LinearLayout
            android:id="@+id/navigation_item_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:paddingStart="@dimen/navigation_drawer_start"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            android:paddingBottom="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="@dimen/navigation_drawer_item_layout_padding_top"
                android:paddingBottom="@dimen/navigation_drawer_item_layout_padding_bottom">

                <ImageView
                    android:layout_width="@dimen/navigation_drawer_item_icon_size"
                    android:layout_height="@dimen/navigation_drawer_item_icon_size"
                    app:srcCompat="@drawable/ic_cloud_upload_round_24"
                    app:tint="@color/navigationDrawerIconColor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/navigation_drawer_item_text_padding_start"
                    android:text="Upload Content"
                    android:textAllCaps="false"
                    android:textColor="@color/navigationDrawerTextColor"
                    android:textSize="@dimen/navigation_drawer_default_text" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/navigation_item_favorite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:paddingStart="@dimen/navigation_drawer_start"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            android:paddingBottom="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="@dimen/navigation_drawer_item_layout_padding_top"
                android:paddingBottom="@dimen/navigation_drawer_item_layout_padding_bottom">

                <ImageView
                    android:layout_width="@dimen/navigation_drawer_item_icon_size"
                    android:layout_height="@dimen/navigation_drawer_item_icon_size"
                    app:srcCompat="@drawable/ic_favorite_round_24"
                    app:tint="@color/navigationDrawerIconColor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/navigation_drawer_item_text_padding_start"
                    android:text="Favorites"
                    android:textAllCaps="false"
                    android:textColor="@color/navigationDrawerTextColor"
                    android:textSize="@dimen/navigation_drawer_default_text" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/navigationDrawerDividerColor" />

        <LinearLayout
            android:id="@+id/navigation_item_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:paddingStart="@dimen/navigation_drawer_start"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            android:paddingBottom="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="@dimen/navigation_drawer_item_layout_padding_top"
                android:paddingBottom="@dimen/navigation_drawer_item_layout_padding_bottom">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:srcCompat="@drawable/ic_settings_round_24"
                    app:tint="@color/navigationDrawerIconColorDark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/navigation_drawer_item_text_padding_start"
                    android:text="Settings"
                    android:textAllCaps="false"
                    android:textColor="@color/navigationDrawerIconColorDark" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/navigation_item_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:paddingStart="@dimen/navigation_drawer_start"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            android:paddingBottom="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="@dimen/navigation_drawer_item_layout_padding_top"
                android:paddingBottom="@dimen/navigation_drawer_item_layout_padding_bottom">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:srcCompat="@drawable/ic_help_round_24"
                    app:tint="@color/navigationDrawerIconColorDark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="20dp"
                    android:text="Help"
                    android:textAllCaps="false"
                    android:textColor="@color/navigationDrawerIconColorDark" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/navigation_item_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:paddingStart="@dimen/navigation_drawer_start"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            android:paddingBottom="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="@dimen/navigation_drawer_item_layout_padding_top"
                android:paddingBottom="@dimen/navigation_drawer_item_layout_padding_bottom">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:srcCompat="@drawable/ic_info_outline_24"
                    app:tint="@color/navigationDrawerIconColorDark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="20dp"
                    android:text="Information"
                    android:textAllCaps="false"
                    android:textColor="@color/navigationDrawerIconColorDark" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>

